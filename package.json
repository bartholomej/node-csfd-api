{
  "name": "node-csfd-api",
  "version": "1.8.0",
  "description": "Simple NPM library for scraping CSFD",
  "main": "index.js",
  "author": "BART! <bart@bartweb.cz>",
  "scripts": {
    "start": "tsc -w",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "postbuild": "npm-prepare-dist -s postinstall -s prepare",
    "tsc": "tsc",
    "demo": "ts-node demo",
    "lint": "eslint ./src/**/**/* --fix",
    "test": "jest",
    "postinstall": "yarn husky install",
    "publish:next": "yarn && yarn build && yarn test --coverage true && npm publish --folder dist --tag beta",
    "postversion": "git push && git push --follow-tags",
    "release:beta": "npm version prerelease -m \"chore(update): prelease %s β\"",
    "release:patch": "git checkout master && npm version patch -m \"chore(update): patch release %s 🐛\"",
    "release:minor": "git checkout master && npm version minor -m \"chore(update): release %s 🚀\"",
    "release:major": "git checkout master && npm version major -m \"chore(update): major release %s 💥\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "cross-fetch": "^3.1.4",
    "node-html-parser": "^4.1.5"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^27.0.2",
    "@types/node": "^14.17.9",
    "@types/node-fetch": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.2",
    "jest": "^27.2.1",
    "jest-fetch-mock": "^3.0.3",
    "npm-prepare-dist": "^0.3.1",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "repository": {
    "url": "git+https://github.com/bartholomej/node-csfd-api.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/bartholomej/node-csfd-api/issues"
  },
  "homepage": "https://github.com/bartholomej/node-csfd-api#readme",
  "keywords": [
    "csfd",
    "čsfd",
    "ratings",
    "movies",
    "films",
    "nodejs",
    "node",
    "typescript",
    "scraper",
    "parser",
    "api"
  ],
  "engines": {
    "node": ">= 10"
  },
  "license": "MIT"
}
