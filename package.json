{
  "name": "node-csfd-api",
  "version": "2.7.0",
  "description": "ČSFD API in JavaScript. Amazing NPM library for scrapping csfd.cz :)",
  "main": "index.js",
  "author": "BART! <bart@bartweb.cz>",
  "scripts": {
    "start": "tsc -w",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "postbuild": "npm-prepare-dist -s postinstall -s prepare",
    "tsc": "tsc",
    "demo": "ts-node demo",
    "lint": "eslint ./src/**/**/* --fix",
    "test": "jest",
    "postinstall": "yarn husky install",
    "publish:next": "yarn && yarn build && yarn test --coverage true && cd dist && npm publish --tag next",
    "postversion": "git push && git push --follow-tags",
    "release:beta": "npm version preminor --preid=beta -m \"chore(update): prelease %s β\"",
    "prerelease:beta": "npm version prerelease --preid=beta -m \"chore(update): prelease %s β\"",
    "release:patch": "git checkout master && npm version patch -m \"chore(update): patch release %s 🐛\"",
    "release:minor": "git checkout master && npm version minor -m \"chore(update): release %s 🚀\"",
    "release:major": "git checkout master && npm version major -m \"chore(update): major release %s 💥\"",
    "prepare": "husky install"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "dependencies": {
    "cross-fetch": "^3.1.5",
    "node-html-parser": "^6.1.4"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.33.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.4.1",
    "jest-fetch-mock": "^3.0.3",
    "npm-prepare-dist": "^0.4.1",
    "prettier": "^2.8.3",
    "pretty-quick": "^3.1.3",
    "rimraf": "^4.1.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "repository": {
    "url": "git+https://github.com/bartholomej/node-csfd-api.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/bartholomej/node-csfd-api/issues"
  },
  "homepage": "https://github.com/bartholomej/node-csfd-api#readme",
  "keywords": [
    "csfd",
    "čsfd",
    "ratings",
    "movies",
    "films",
    "nodejs",
    "node",
    "typescript",
    "scraper",
    "parser",
    "api"
  ],
  "engines": {
    "node": ">= 14"
  },
  "license": "MIT"
}
